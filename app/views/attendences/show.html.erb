<%- model_class = Attendence -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
  <dd><%= @attendence.employee_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:day) %>:</strong></dt>
  <dd><%= @attendence.day %></dd>
  <dt><strong><%= model_class.human_attribute_name(:morning) %>:</strong></dt>
  <dd><%= @attendence.morning %></dd>
  <dt><strong><%= model_class.human_attribute_name(:after_noon) %>:</strong></dt>
  <dd><%= @attendence.after_noon %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              attendences_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_attendence_path(@attendence), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              attendence_path(@attendence),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
