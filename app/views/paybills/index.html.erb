<%- model_class = Paybill -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:supplier_id) %></th>
      <th><%= model_class.human_attribute_name(:payment_method) %></th>
      <th><%= model_class.human_attribute_name(:payment_date) %></th>
      <th><%= model_class.human_attribute_name(:bill_no) %></th>
      <th><%= model_class.human_attribute_name(:refernce_no) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:tax) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @paybills.each do |paybill| %>
      <tr>
        <td><%= link_to paybill.id, paybill_path(paybill) %></td>
        <td><%= paybill.supplier.name %></td>
        <td><%= paybill.payment_method %></td>
        <td><%= paybill.payment_date %></td>
        <td><%= paybill.bill_no %></td>
        <td><%= paybill.refernce_no %></td>
        <td><%= paybill.description %></td>
        <td><%= paybill.amount %></td>
        <td><%= paybill.tax %></td>
        <td><%=l paybill.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_paybill_path(paybill), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      paybill_path(paybill),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_paybill_path,
            :class => 'btn btn-primary' %>
