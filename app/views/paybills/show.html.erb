<%- model_class = Paybill -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:supplier_id) %>:</strong></dt>
  <dd><%= @paybill.supplier_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_method) %>:</strong></dt>
  <dd><%= @paybill.payment_method %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_date) %>:</strong></dt>
  <dd><%= @paybill.payment_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_no) %>:</strong></dt>
  <dd><%= @paybill.bill_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:refernce_no) %>:</strong></dt>
  <dd><%= @paybill.refernce_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @paybill.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @paybill.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tax) %>:</strong></dt>
  <dd><%= @paybill.tax %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              paybills_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_paybill_path(@paybill), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              paybill_path(@paybill),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
