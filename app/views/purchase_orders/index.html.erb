<p id="notice"><%= notice %></p>

<h1>Listing Purchase Orders</h1>

<table>
  <thead>
    <tr>
      <th>Supplier</th>
      <th>P o date</th>
      <th>Shipping address</th>
      <th>Ship to</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Unit</th>
      <th>Rate</th>
      <th>Amount</th>
      <th>Tax</th>
      <th>Message</th>
      <th>Material</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_orders.each do |purchase_order| %>
      <tr>
        <td><%= purchase_order.supplier_id %></td>
        <td><%= purchase_order.p_o_date %></td>
        <td><%= purchase_order.shipping_address %></td>
        <td><%= purchase_order.ship_to %></td>
        <td><%= purchase_order.description %></td>
        <td><%= purchase_order.quantity %></td>
        <td><%= purchase_order.unit %></td>
        <td><%= purchase_order.rate %></td>
        <td><%= purchase_order.amount %></td>
        <td><%= purchase_order.tax %></td>
        <td><%= purchase_order.message %></td>
        <td><%= purchase_order.material_id %></td>
        <td><%= link_to 'Show', purchase_order %></td>
        <td><%= link_to 'Edit', edit_purchase_order_path(purchase_order) %></td>
        <td><%= link_to 'Destroy', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

